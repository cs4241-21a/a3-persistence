<!-- Modal -->
<div class="modal fade" id="createBoard" tabindex="-1" role="dialog" aria-labelledby="boardLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="boardLabel">Create Board</h5>
                <button type="button" class="btn close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <p>Enter Title:</p>
                    <input id="board-title" class="mb-3" type="text">
                    <p>Select Reviewers:</p>
                    <select id="users-dropdown" class="form-select" aria-label="select reviewers" size="3" multiple>
                    </select>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" id="submit-board" class="btn btn-primary"
                    data-bs-dismiss="modal">Submit</button>
            </div>
        </div>
    </div>
</div>